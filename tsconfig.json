{
  "include": ["src/**/*", "api/**/*", "script/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"],

  "compilerOptions": {
    "incremental": true,
    "noEmit": true,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["node", "vite/client"]
  }
}
